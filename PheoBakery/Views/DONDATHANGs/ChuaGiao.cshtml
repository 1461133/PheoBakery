@using PheoBakery.Models;

@model IEnumerable<DONDATHANG>
@{
    ViewBag.Title = "Chưa giao";
    Layout = "~/Views/Admin/AdminQuanTri.cshtml";
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 10);
}

<h2>Quản Lý Đơn Hàng (danh sách đơn hàng chưa giao)</h2>
<ul class="nav nav-tabs">
    <li role="presentation"><a href="@Url.Action("ChuaThanhToan","DONDATHANGs")">Chưa Thanh Toán</a></li>
    <li role="presentation" class="active"><a href="@Url.Action("ChuaGiao","DONDATHANGs")">Chưa Giao Đã Thanh Toán</a></li>
    <li role="presentation"><a href="@Url.Action("DaGiaoDaThanhToan","DONDATHANGs")">Đã Giao Và Đã Thanh Toán</a></li>
</ul>
@grid.GetHtml(
            tableStyle: "table table-bordered table-condensed table-responsive",
            headerStyle: "gridHead",
            footerStyle: "gridHead",
            rowStyle: "gridRow",
            alternatingRowStyle: "gridAlter",
            columns: grid.Columns(
                        grid.Column("MADONDH", "Mã đơn đặt hàng"),
                        grid.Column("MAKH", "Họ tên khách hàng", format: p => p.MAKH != null ? p.KHACHHANG.TENKH : ""), // toán tử 3 ngôi
                        grid.Column("NGAYDAT", "Ngày đặt hàng"),
                         grid.Column("NGAYGIAO", "Ngày giao hàng"),
                        grid.Column("GIAOHANG", "Tình trạng giao hàng"),
                        grid.Column("THANTOAN", "Đã Thanh toán"),

                         grid.Column("HUY", "Hủy đơn hàng"),
                        grid.Column("Duyệt Đơn Hàng", format: p => @Html.ActionLink("Duyệt Đơn Hàng", "DuyetDonHang", new { Id = p.MADONDH }, new { @target = "_blank", @class = "btn btn-success" }))
                        ))










