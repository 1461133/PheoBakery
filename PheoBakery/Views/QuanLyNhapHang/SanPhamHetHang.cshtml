@using PheoBakery.Models;
@model IEnumerable<SANPHAM>
@{
    ViewBag.Title = "Out Of Stock";
    Layout = "~/Views/Admin/AdminQuanTri.cshtml";
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 5);
}
<h1 style="font-weight:bold;text-align:center">Out Of Stock</h1>
<br />

@grid.GetHtml(
            tableStyle: "table table-bordered table-condensed table-responsive",
            headerStyle: "gridHead",
            footerStyle: "gridHead",
            rowStyle: "gridRow",
            alternatingRowStyle: "gridAlter",
            columns: grid.Columns(
                        grid.Column("MASP", "ID"),
                        grid.Column("TENSP", "Product Name"),
                         grid.Column("SOLUONGTON", "Quantity"),
                      grid.Column("DONGIA", "Price"),
                        grid.Column("HINHANH", "Image", format: p => @Html.Raw("<img width=\"200\" height=\"250\" src = \"../Content/CssHome/HinhSanPham/" + p.HINHANH + "\">")),
                        grid.Column("Import", format: p => @Html.ActionLink("Import", "NhapHangDon", new { @MASP = p.MASP }, new { @class = "btn btn-success", @target = "_blank" }))
                 ))
