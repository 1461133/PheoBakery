@using PheoBakery.Models
@using System.Web.Mvc.Html

        <div id="header" class="grid_16">
            <div id="logo" class="grid_4 alpha">
                <h1><a href="@Url.Action("Index","Home")">DapurKue</a></h1>
                <h2>Famously Delicious</h2>
            </div>
            <div id="headright" class="grid_7 prefix_5 omega" style="margin-left:900px">
                @using (Html.BeginForm("DatHang", "GioHang"))
                {
                    if (Session["user"] == null)
                    {
                        <h3 class="login"><a href="@Url.Action("Create", "KHACHHANGs")">Sign up</a> / <a href="@Url.Action("DangNhap", "Home")">Login</a></h3>

                    }
                    else
                    {
                        
                        <h3 class="login">Hi, @Html.Label(Session["user"].ToString()) / <a href="@Url.Action("DangNhap", "Home")">Logout</a></h3>
                        <div class="col-md-6 top-header-left">
                            @Html.Action("GioHangPartial", "GioHang")
                        </div>

                    }
                }
            </div>
        </div>

