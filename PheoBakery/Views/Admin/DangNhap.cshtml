@using PheoBakery.Models;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/AdminLayout.cshtml";
}

<body class="sign-in-up">

    <div id="page-wrapper" class="sign-in-wrapper">
        <div class="graphs">
            <div class="sign-in-form">
                <div class="sign-in-form-top">
                    <p><a href="#">LOG IN </a></p>
                </div>
                <div class="signin">
                    <div class="signin-rit">
                        <span class="checkbox1">
                            <label class="checkbox"><input type="checkbox" name="checkbox" checked="">Forgot Password ?</label>
                        </span>
                        <p><a href="#">Click Here</a> </p>
                        <div class="clearfix"> </div>
                    </div>
                    <div class="log-input">
                        @using (Ajax.BeginForm("LoginAdmin", "Admin", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "ThongBao" }))
                        {
                            <div class="log-input-left">
                                <input class="email TaiKhoan" name="txtUser" placeholder="Username" required="" type="text">
                                <input class="password MatKhau" name="txtPass" placeholder="Password" required="" type="password">
                            </div>
                            <h3 style="font-weight:bold;color:red;text-align:left;" id="ThongBao"> </h3>

                            <input value="Log In" type="submit" id="btnDangNhap1">

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--footer section start-->
    <!--footer section end-->
</body>

<script type="text/javascript">
    $("#btnDangNhap1").click(function () {
        var TaiKhoan = $(".TaiKhoan").val();
        var MatKhau = $(".MatKhau").val();
        //    alert("Tài khoản:" + TaiKhoan + "\n Mật khẩu:" + MatKhau);
        if (TaiKhoan == "") {
            alert("Enter Your Username");
            return;
        }
        if (MatKhau == "") {
            alert("Enter Your Password");
            return;
        }
    });

</script>

