
@using PheoBakery.Models;
@model IEnumerable<KHACHHANG>
@{
    ViewBag.Title = "Manage Account";
    Layout = "~/Views/Admin/AdminQuanTri.cshtml";
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 10);
}

<h2 style="font-weight:bold;text-align:center">Member Management</h2>
@grid.GetHtml(
            tableStyle: "table table-bordered table-condensed table-responsive",
            headerStyle: "gridHead",
            footerStyle: "gridHead",
            rowStyle: "gridRow",
            alternatingRowStyle: "gridAlter",
            columns: grid.Columns(
                        grid.Column("MAKH", "Customer"),
                        grid.Column("TENKH", "Customer's Name "),
                         grid.Column("DIACHI", "Customer's Address "),
                        grid.Column("EMAIL", "Customer's Email "),
                         grid.Column("SDT", "Customer's Phone"),
                         grid.Column("TENDANGNHAP","Customer's Username")
                        ))





